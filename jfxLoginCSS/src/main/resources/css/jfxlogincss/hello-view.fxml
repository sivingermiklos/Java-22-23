<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0" spacing="20.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="css.jfxlogincss.LoginController">
   <children>
      <HBox prefHeight="300.0" prefWidth="500.0">
         <children>
            <Pane prefHeight="300.0" prefWidth="250.0" styleClass="img" />
            <VBox prefHeight="100.0" prefWidth="250.0">
               <children>
                  <Label alignment="CENTER" prefHeight="190.0" prefWidth="248.0" styleClass="bejelentkezes" text="Bejelentkezés" />
                  <TextField fx:id="usr" prefWidth="230.0" promptText="Felhasználónév" styleClass="textfield">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="pw" prefWidth="230.0" promptText="Jelszó" styleClass="textfield">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="7.5" />
                     </VBox.margin>
                  </PasswordField>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="25.0" prefWidth="230.0" styleClass="btn" text="Bejelentkezés">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Pane prefHeight="180.0" prefWidth="250.0" />
               </children></VBox>
         </children>
      </HBox>
   </children>
</VBox>
